<!-- Type '!' mark and generate html template -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <title>Blog</title>
  </head>
  <body class="mt-4">
    <div class="container">
      <h1 class="mb-4">Blog Articles</h1>
      <a href="/articles/new" class="btn btn-success">New Article</a>

      <% articles.forEach(article => { %>

      <div class="card mt-4">
        <div class="card-body">
          <div class="card-title">
            <h4><%= article.title %></h4>
            <div class="card-subtitle text-muted mb-2">
              <%= article.createdAt.toLocaleDateString() %>
            </div>
            <div class="cart-text mb-2"><%= article.description %></div>
            <div>
              <!-- prettier-ignore -->
              <a href="articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
              <!-- prettier-ignore -->
              <a href="articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>

              <form
                action="/articles/<%= article.id %>?_method=DELETE"
                method="POST"
                class="d-inline"
              >
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>

      <% }) %>
    </div>
  </body>
</html>
